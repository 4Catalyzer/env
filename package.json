{
  "name": "@4c/env",
  "version": "1.2.4",
  "description": "Environment variable management and helpers",
  "license": "MIT",
  "scripts": {
    "build:lib": "babel src -d lib --ignore **/__tests__ --delete-dir-on-start -x .ts",
    "build:types": "tsc --outDir lib",
    "build": "yarn build:lib && yarn build:types",
    "eslint": "eslint . --ext .js,.ts,.tsx",
    "format": "yarn eslint && yarn import-sort --write && yarn prettier --write",
    "import-sort": "import-sort '**/src/**/*.{js,ts,tsx}' '!**/__generated__/*' '!**/*.d.ts'",
    "lint": "tsc --noEmit && yarn eslint && yarn import-sort --list-different && yarn prettier --list-different",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn run build",
    "prettier": "prettier --ignore-path .eslintignore '**/*.{json,css,md}'",
    "test": "yarn lint"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/env.js",
  "files": [
    "CHANGELOG.md",
    "lib",
    "dist"
  ],
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "importSort": {
    ".js, .ts, .tsx": {
      "parser": "import-sort-style-4catalyzer/parser-ts",
      "style": "import-sort-style-4catalyzer"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "import-sort --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "dependencies": {
    "@types/getenv": "^0.7.0",
    "dotenv": "^4.0.0",
    "getenv": "^0.7.0"
  },
  "devDependencies": {
    "@4c/babel-preset-4catalyzer": "^4.1.1",
    "@4c/tsconfig": "^0.1.1",
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-typescript": "^7.1.0",
    "@types/dotenv": "^4.0.0",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^1.0.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "eslint": "^5.12.0",
    "eslint-config-4catalyzer": "^0.7.0",
    "eslint-config-4catalyzer-typescript": "^0.10.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.1.2",
    "import-sort-cli": "^5.2.0",
    "import-sort-style-4catalyzer": "^4.3.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.0",
    "typescript": "^3.2.2"
  }
}
