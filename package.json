{
  "name": "@4c/env",
  "version": "1.2.6",
  "description": "Environment variable management and helpers",
  "license": "MIT",
  "scripts": {
    "build:lib": "babel src -d lib --ignore **/__tests__ --delete-dir-on-start -x .ts",
    "build:types": "tsc --outDir lib --emitDeclarationOnly",
    "build": "yarn build:lib && yarn build:types",
    "eslint": "eslint . --ext .js,.ts,.tsx",
    "format": "yarn eslint && yarn prettier --write",
    "lint": "tsc --noEmit && yarn eslint && yarn prettier --list-different",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn run build",
    "prettier": "prettier --ignore-path .eslintignore '**/*.{json,css,md}'",
    "test": "yarn lint"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/env.js",
  "files": [
    "CHANGELOG.md",
    "lib",
    "dist"
  ],
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{json,css,md}": "prettier --write --ignore-path .eslintignore"
  },
  "dependencies": {
    "@types/getenv": "^1.0.0",
    "dotenv": "^8.0.0",
    "getenv": "^1.0.0"
  },
  "devDependencies": {
    "@4c/babel-preset": "^7.3.4",
    "@4c/tsconfig": "^0.3.1",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/dotenv": "^6.1.1",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "eslint": "^6.8.0",
    "eslint-config-4catalyzer": "^1.1.1",
    "eslint-config-4catalyzer-typescript": "^1.1.8",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  }
}
